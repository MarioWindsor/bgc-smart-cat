{% include 'parts/head.liquid' %}

<style>
	.article-content h1 { 
		display: block;
		margin-bottom: var(--p);
		font-size: var(--h3);
		font-family: "Rajdhani", Arial, serif;
		line-height: 1.125;
	}
	.article-content h2 { 
		display: block;
		margin-bottom: var(--p);
		font-size: var(--h3);
		font-family: "Rajdhani", Arial, serif;
		line-height: 1.125;
	}
	.article-content h3 { 
		display: block;
		margin-bottom: var(--p);
		font-size: var(--h4);
		font-family: "Rajdhani", Arial, serif;
		line-height: 1.125;
	}
	.article-content h4 { 
		display: block;
		margin-bottom: var(--p);
		font-size: var(--h5);
		font-family: "Rajdhani", Arial, serif;
		line-height: 1.125;
	}
	.article-content h5 { 
		display: block;
		margin-bottom: var(--p);
		font-size: var(--h6);
		font-family: "Rajdhani", Arial, serif;
		line-height: 1.125;
	}
	.article-content h6 { 
		display: block;
		margin-bottom: var(--p);
		font-size: var(--p);
		font-family: "Rajdhani", Arial, serif;
		line-height: 1.125;
	}
	.article-content p {
		display: block;
		margin-bottom: var(--p);
		font-size: var(--p);
	}
	.article-content label { 
		display: inline-block;
		font-size: var(--label);
	}
	.article-content small { 
		display: inline-block;
		font-size: var(--small);
	}

	.article-content img {
		border-radius: var(--space-25);
		box-shadow: 0 0 3px 1px rgba(var(---red), 0.125),  0 0 12px 4px rgba(var(---red), 0.2);
	}
</style>


<!-- Intro Section -->
<section id="intro-section" class="intro-section space-50-top-bottom">
	<div class="container">
		<div class="intro" style="font-size: 0; display: flex; flex-direction: row; align-items: center; justify-content: space-between;">
			<div class="logo columns small-10 medium-6 large-4 xlarge-3 space-25">
				<img class="block" src="media/logo-combination-eng.png">
			</div>
			<div class="menu-toggle">
				<label class="row cursor-pointer" for="">
					<div class="inline text-blue fill-light space-25 radius-25 no-pointer hide-large hide-xlarge"><i class='inline bx bx-menu h2' style="display: inline-block; line-height: var(--h2);"></i></div>
					<div class="inline text-blue fill-light space-25 radius-25 no-pointer hide-small hide-medium hide-xlarge"><i class='inline bx bx-menu h3' style="display: inline-block; line-height: var(--h3);"></i></div>
					<div class="inline text-blue fill-light space-25 radius-25 no-pointer hide-small hide-medium hide-large"><i class='inline bx bx-menu h4' style="display: inline-block; line-height: var(--h4);"></i></div>
				</label>
			</div>
		</div>
	</div>
</section>
<!-- END: Intro Section -->
<img class="cover-image block" src="{{ coverimage }}" alt="{{ title }}">
<!-- Article Section -->
<section id="article-section" class="article-section space-50-top-bottom">
	<div class="container">
		<div class="row article">
			<div class="logo columns small-12 large-8 large-offset-2">
				<h1 class="h2 block font-h strong space-25-top">{{ title }}</h1>
				<small class="block small text-neutral-3 space-25-top">Published on: {{ date | date: "%B %d, %Y" }}</small>
				<div class="article-content space-50-top-bottom">{{ content }}</div>
				<a href="/articles" class="button fill-blue"><span class="inline-middle h5">&#9204;&nbsp;</span><span class="inline-middle">More Articles</span></a>
			</div>
		</div>
	</div>
</section>
<!-- END: Article Section -->


