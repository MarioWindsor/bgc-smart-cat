					<!-- FORM JS -->
					<script>
						let session_id = "";
						const api_key = "ec4a6e75-2fa9-11f0-8b17-0200cd936042"; // 2 Factor API Key

						const form = document.getElementById('catalogueQuote');
						let formData = new FormData(form);

						const formBox = document.getElementById('form-box');
						const formBoxInner = document.getElementById('form-box-inner');

						const cartItemsField = document.getElementById('form-cart-items');
						const formSubmitButton = document.getElementById('form-submit-button');

						const otpSubmitButton = document.getElementById('form-submit-button');



						/* -- Form Submit -- */
						function formSubmit(event) {
							event.preventDefault(); // Prevent the default form submission behavior

							// Disable the submit button and change its text immediately
							formSubmitButton.disabled = true;
							formSubmitButton.textContent = 'Submitting...';

							// Send OTP
							sendOTP();
						}



						/* -- Send OTP -- */
						function sendOTP() {
							let mobile_number = document.getElementById("mobile").value; // Get Mobile Number
							let url = `https://2factor.in/API/V1/${api_key}/SMS/+91${mobile_number}/AUTOGEN2/OTP1`;

							fetch(url)
								.then(response => {
									if (!response.ok) {
										// Handle HTTP errors
										console.error("HTTP Error:", response.status, response.statusText);
										// alert(`OTP Send Failed: HTTP Error ${response.status}`);
										throw new Error(`HTTP error! status: ${response.status}`);
									}
									return response.json();
								})
								.then(data => {
									if (data && data["Status"] === "Success") {
										// alert("OTP Sent Successfully!");
										formBoxInner.classList.add('step-2');

										session_id = data["Details"];
										// console.log("OTP Response:", data);
									} else {
										console.error("2Factor API Error:", data);
										// alert(`OTP Send Failed: ${data && data["Details"] ? data["Details"] : "Unknown error"}`);
									}
								})
								.catch(error => {
									console.error("Fetch Error:", error);
									// alert("OTP Send Failed: Could not connect to the server.");
								});
						}



						/* -- Verify OTP -- */
						function verifyOTP() {

							let otp_number = document.getElementById("otp").value;
							// console.log(otp_number);
							let url = `https://2factor.in/API/V1/${api_key}/SMS/VERIFY/${session_id}/${otp_number}`;

							otpSubmitButton.textContent = 'Verifying...';

							fetch(url)
								.then((response) => response.json())
								.then((data) => {
									if (data["Details"] == "OTP Matched") {
										// alert("OTP Matched Successfully");
										console.log("OTP Matched successfully");
										sendGoogleFormData();

										otpSubmitButton.textContent = 'Matched';

										formBoxInner.classList.add('step-3');
									}
									console.log(data);
								})
								.catch(error => {
									console.error("OTP Match Error:", error);

									otpSubmitButton.textContent = 'Wrong OTP';
								});
						}



						/* -- Send Google Form Data -- */
						function sendGoogleFormData() {
							let formData = new FormData(form);

							/* -- Submit Data to Google Forms -- */
							fetch('https://docs.google.com/forms/d/e/1FAIpQLScSdYMiiBt5h2W1kwH4TU9BFmIb60c5fG4u_K0MAHnQcm4mtA/formResponse', {
								method: 'POST',
								body: formData,
								mode: 'no-cors' // Add this to handle potential CORS issues with Google Forms
							})
							.then(response => {

								// Explicitly clear the value of the non-tabbable textarea
								cartItemsField.innerHTML = '';
								// Clear other form fields (this should now work correctly for the tabbable fields)
								form.reset();

								if (response.ok) {
									// Handle success
									console.log('Form submitted successfully!');
								} else {
									// Handle error
									console.error('Form submission failed.');
								}
							})
							.catch(error => {
								console.error('Error during form submission:', error);
							});
						}

					</script>
				</div>
