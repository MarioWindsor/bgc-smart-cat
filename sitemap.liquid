---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>https://bgc.in/</loc>
        <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S%z" }}</lastmod>
    </url>
    
    <url>
        <loc>https://bgc.in/catalogue/</loc>
        <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S%z" }}</lastmod>
    </url>
    
    <url>
        <loc>https://bgc.in/faqs/</loc>
        <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S%z" }}</lastmod>
    </url>
    
    <url>
        <loc>https://bgc.in/articles/</loc>
        <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S%z" }}</lastmod>
    </url>

    {% for page in collections.articles %}
    <url>
        <loc>{{ site.baseUrl }}{{ page.url }}</loc>
        <lastmod>{{ page.date | date: "%Y-%m-%dT%H:%M:%S%z" }}</lastmod>
    </url>
    {% endfor %}
    
    <url>
        <loc>https://bgc.in/awards/</loc>
        <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S%z" }}</lastmod>
    </url>
    
    <url>
        <loc>https://bgc.in/products/</loc>
        <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S%z" }}</lastmod>
    </url>

    {% for product_page in products %}
    <url>
        <loc>{{ site.baseUrl }}/products/{{ product_page.variation_number }}/</loc>
        <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S%z" }}</lastmod>
    </url>
    {% endfor %}
</urlset>